extends layout.pug

block content
  .inner
    h2= page.title
    if page.type == 'tags'
      if site.tags && site.tags.length
        != tagcloud()
        h3 标签列表
        != list_tags()
        != page.content
    else if page.type == 'about'
      != page.content
      h3 统计信息
      span 字数总计：
      span= totalcount(site, ',')
      span= "（" + totalcount(site, 'k') + "）"
      br
      span 时长预计：
      span= totalread(site)
      span  分钟
    else 
      != page.content
