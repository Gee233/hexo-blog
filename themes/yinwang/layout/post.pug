extends includes/layout.pug

block content
  .inner
    h2= page.title
    != page.content
    div(class="align-right")= "(" + wordcount(page.content, 'k') + " / " + min2read(page.content) + "min)"
    if theme.post.backHome
      if theme.post.backHome_hr
        hr
      p
        - var prefix = theme.post.backHome_prefix
        - var suffix = theme.post.backHome_suffix
        span!= prefix 
        a(href="/")= theme.post.backHome_content
        span!= suffix
